@model Customer.Web.ViewModels.ProductFilterViewModel



<h1>Filter Products</h1>

<div class="row">
    <div class="col-md-3">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BrandId">Brand</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MinPrice" class="control-label">Minimum Price</label>
                <input asp-for="MinPrice" class="form-control" type="number" />
                <span asp-validation-for="MinPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPrice" class="control-label">Maximum Price</label>
                <input asp-for="MaxPrice" class="form-control" type="number" />
                <span asp-validation-for="MaxPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" asp-action="ByFilter" asp-route-CategoryId="CategoryId" asp-route-BrandId="BrandId" asp-route-MinPrice="MinPrice" asp-route-MaxPrice="MaxPrice" />
            </div>
        </form>
    </div>
</div>