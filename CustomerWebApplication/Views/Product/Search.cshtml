@model Customer.Web.ViewModels.ProductSearchViewModel

<h1>Product Search</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <input asp-for="SearchString" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" asp-action="BySearch" asp-route-SearchString="SearchString" />
            </div>
        </form>
    </div>
</div>

