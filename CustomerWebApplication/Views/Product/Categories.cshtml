@model Customer.Web.ViewModels.CategoryListViewModel

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    <a asp-action="ByCategory" asp-route-CategoryId="@item.CategoryId">@item.Category</a>
                </td>
            </tr>
        }
    </tbody>
</table>
