@model Customer.Web.ViewModels.BrandListViewModel

@{
    ViewData["Title"] = "Brands";
}

<h1>Categories</h1>

<table class="table">
    <tbody>
        @foreach (var item in Model.Brands)
        {
            <tr>
                <td>
                    <a asp-action="ByBrand" asp-route-BrandId="@item.BrandId">@item.Brand</a>
                </td>
            </tr>
        }
    </tbody>
</table>