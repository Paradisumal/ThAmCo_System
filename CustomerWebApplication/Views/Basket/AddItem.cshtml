@model Customer.Web.ViewModels.BasketItemViewModel

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Basket" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="ByBrand" asp-route-BrandId="@Html.DisplayFor(model => model.CategoryId)">@Html.DisplayFor(model => model.Category)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="ByBrand" asp-route-BrandId="@Html.DisplayFor(model => model.BrandId)">@Html.DisplayFor(model => model.Brand)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description) <br>
        </dd>
    </dl>
</div>


